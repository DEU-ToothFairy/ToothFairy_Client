<?xml version="1.0" encoding="utf-8"?>

<!-- 데이터 바인딩을 위한 레이아웃 -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mainVM"
            type="com.example.toothfairy.viewModel.MainViewModel" />

        <variable
            name="homeVM"
            type="com.example.toothfairy.viewModel.HomeViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".view.fragment.HomeFragment">

        <!-- TODO: Update blank fragment layout -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- LAYOUT 전체 레이아웃 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <!-- LAYOUT 프로필 레이아웃 -->
                <LinearLayout
                    android:id="@+id/profileLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"

                    android:background="@color/white"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <!-- 오늘 날짜 텍스트 뷰 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="Hello,"
                                android:textColor="#8696BB"
                                android:textSize="22dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"

                                android:text="@{mainVM.patient.name + ` 님 반갑습니다.`, default=`박잼민 님 반갑습니다.`}"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                android:fontFamily="@font/noto_sans_kr_bold"

                                android:includeFontPadding="false"
                                />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <!-- 프로필 사진 레이아웃 -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            >

                            <ProgressBar
                                android:id="@+id/profileProgressBar"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:indeterminateOnly="false"

                                android:progressDrawable="@drawable/profile_circle"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"

                                tools:progress="@{(int)mainVM.calibrationProgress}" />

                            <!-- 프로필 사진 -->
                            <!--
                                INFO
                                 - cardCornerRadius : width와 height의 절반이어야 원형이 나옴
                                 - cardElevation : 그림자 효과
                                 - scaleType : centerCrop으로 해야 꽉찬 원이 나옴
                             -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="60dp"
                                android:layout_height="60dp"

                                app:cardCornerRadius="75dp"
                                app:cardElevation="0dp"
                                app:layout_constraintBottom_toBottomOf="@id/profileProgressBar"
                                app:layout_constraintLeft_toLeftOf="@+id/profileProgressBar"
                                app:layout_constraintRight_toRightOf="@+id/profileProgressBar"
                                app:layout_constraintTop_toTopOf="@+id/profileProgressBar">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:scaleType="centerCrop"
                                    android:src="@drawable/profile" />
                            </androidx.cardview.widget.CardView>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>
                <!-- LAYOUT END 프로필 레이아웃 끝 -->




                <!-- LAYOUT 착용 정보 레이아웃 -->
                <LinearLayout
                    android:id="@+id/wearingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"

                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"

                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/profileLayout">


                    <!-- LAYOUT 목표 착용 시간 알림 레이아웃 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="30dp"
                        app:cardBackgroundColor="#F0F5FF"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"

                            android:padding="10dp"
                            android:gravity="center"
                            >

                            <View
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/ic_info_line"
                                android:layout_gravity="left"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"

                                android:text="오늘의 목표 착용 시간은 16시간 30분 입니다."
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:fontFamily="@font/poppins_regular"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <!-- LAYOUT END 목표 착용 시간 알림 레이아웃 -->

                    <!-- LAYOUT 교정기 착용 시간 레이아웃 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"

                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"

                        android:orientation="vertical"
                        >

                        <!-- LAYOUT 상단 텍스트 레이아웃 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="교정기 착용 시간"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/noto_sans_kr_bold"
                                android:includeFontPadding="false"
                                />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                />


                            <androidx.cardview.widget.CardView
                                android:id="@+id/wearingStatusView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                app:cardBackgroundColor="@color/light_blue"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp"
                                android:layout_gravity="right"
                                >

                                <TextView
                                    android:id="@+id/wearingStatTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"

                                    android:text="착용 중"
                                    android:textSize="14dp"
                                    android:textColor="#0250EC"

                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"/>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <!-- LAYOUT END 상단 텍스트 레이아웃 -->


                        <!-- LAYOUT 착용 시간, 퍼센트 레이아웃 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/wearingTimeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@{mainVM.dailyWearingTimeToString, default=`12 H 30 m`}"
                                android:textColor="@color/colorAccent"
                                android:textSize="14dp"

                                android:fontFamily="@font/poppins_regular"
                                android:includeFontPadding="false"
                                />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@{(int)((double)mainVM.dailyWearingTime / (double)86400000.0 * 100) + `%`, default=`80%`}"
                                android:textSize="14dp"
                                android:textColor="@color/colorAccent"

                                android:fontFamily="@font/poppins_regular"
                                android:includeFontPadding="false"
                                />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/userWearMaxProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="15dp"

                            android:progress="@{(int)((double)mainVM.dailyWearingTime / (double)86400000.0 * 100)}"
                            android:progressDrawable="@drawable/wearing_progress_bar" />

                        <View
                            android:layout_width="300dp"
                            android:layout_height="1.5dp"
                            android:background="@color/light_gray"
                            android:layout_gravity="center"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >

                            <View
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:background="@drawable/ic_calendar"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/poppins_regular"
                                android:includeFontPadding="false"
                                android:text="@{homeVM.today, default=`Sunday, 12 June`}"

                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <View
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginLeft="50dp"
                                android:background="@drawable/ic_clock"
                                android:layout_gravity="right"
                                />
                            <TextView
                                android:id="@+id/remainWearingTimeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="right"

                                android:text="@{homeVM.remainWearingTimeToString(), default=`00 시간 00 분 남음`}"
                                android:textSize="12dp"
                                android:textColor="@color/black"

                                android:fontFamily="@font/poppins_regular"
                                android:includeFontPadding="false"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- LAYOUT END 교정기 착용 레이아웃 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_width="70dp"
                                    android:layout_height="5dp"
                                    android:layout_marginBottom="1dp"

                                    android:background="#BC92C0FF"
                                    android:layout_gravity="center_horizontal | bottom"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="체크리스트"
                                    android:textSize="16dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"
                                    />
                            </FrameLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <LinearLayout
                                android:id="@+id/checklist_edit_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <View
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_edit"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:text="수정"
                                    android:textSize="12dp"
                                    android:textColor="@color/gray"
                                    android:fontFamily="@font/poppins_regular"
                                    android:includeFontPadding="false"
                                    />
                            </LinearLayout>
                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <include layout="@layout/sub_checklist_layout" />

                            <include layout="@layout/sub_checklist_layout" />

                            <include layout="@layout/sub_checklist_layout" />
                        </LinearLayout>

                    </LinearLayout>


                    <!-- LAYOUT 유튜브 레이아웃 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/summaryView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="15dp"

                        app:cardBackgroundColor="#111f42"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/profileLayout">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:padding="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="교정이 처음인 당신을 위한"
                                    android:textSize="14dp"
                                    android:textColor="@color/light_gray"
                                    android:fontFamily="@font/fsindustrietrial_bold"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"

                                    android:text="교정 Tips !"
                                    android:textSize="20dp"
                                    android:textColor="#9CBDFF"
                                    android:fontFamily="@font/fsindustrietrial_bold_italic"
                                    />
                            </LinearLayout>

                            <!-- 정렬을 위한 뷰 -->


                            <View
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="15dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_baseline_arrow_forward_ios_24"/>

                            <!-- 정렬용 뷰 -->
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"></View>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="20dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                >

                                <View
                                    android:layout_width="100dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/youtube"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="YOUTUBE"
                                    android:textSize="8dp"
                                    android:textColor="@color/light_gray"
                                    android:fontFamily="@font/fsindustrietrial_medium"
                                    />

                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <!-- LAYOUT END 유튜브 레이아웃 끝 -->

                    <!-- LAYOUT 당일 착용 시간 그래프 레이아웃 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginBottom="15dp"

                        app:cardCornerRadius="15dp"
                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="false">

                        <!-- Arc Progress Include -->
<!--                        <include-->
<!--                            android:id="@+id/wearingProgressLayout"-->
<!--                            layout="@layout/wearing_progress_layout"-->
<!--                            bind:homeViewModel="@{homeViewModel}"-->
<!--                            />-->

                        <!-- LAYOUT END 당일 착용 시간 그래프 레이아웃 끝 -->
                    </androidx.cardview.widget.CardView>

                    <!-- LAYOUT 기타 정보 요약 그래프 레이아웃 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_marginBottom="15dp"

                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp"
                            android:orientation="horizontal"
                            >

                            <!-- VIEW 하루 평균 착용 그래프 -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                >

                                <TextView
                                    android:id="@+id/avgText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="평균 착용 시간"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"

                                    android:fontFamily="@font/fsindustrietrial_bold"
                                    app:layout_constraintBottom_toBottomOf="parent"

                                    app:layout_constraintLeft_toLeftOf="@+id/userAvgProgressBar"
                                    app:layout_constraintRight_toRightOf="@+id/userAvgProgressBar"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/userAvgProgressBar"
                                     />

                                <com.github.lzyzsd.circleprogress.ArcProgress
                                    android:id="@+id/curedAvgProgressBar"
                                    android:background="@color/white"

                                    app:arc_unfinished_color="#ececec"
                                    app:arc_finished_color="#D5D5D5"

                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginTop="30dp"

                                    app:arc_stroke_width="5dp"
                                    app:arc_progress="60"

                                    app:arc_text_color="@color/white"

                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/avgText"
                                    />

                                <com.github.lzyzsd.circleprogress.ArcProgress
                                    android:id="@+id/userAvgProgressBar"
                                    android:background="#00FFFFFF"

                                    app:arc_unfinished_color="#00ECECEC"
                                    app:arc_finished_color="@color/colorAccent"

                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginTop="30dp"

                                    app:arc_stroke_width="5dp"
                                    app:arc_progress="55"

                                    app:arc_text_color="@color/white"

                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/avgText"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="13:12"
                                    android:textSize="14dp"
                                    android:textColor="@color/black"

                                    android:fontFamily="@font/fsindustrietrial_medium"
                                    app:layout_constraintLeft_toLeftOf="@+id/userAvgProgressBar"
                                    app:layout_constraintRight_toRightOf="@+id/userAvgProgressBar"
                                    app:layout_constraintTop_toTopOf="@+id/userAvgProgressBar"
                                    app:layout_constraintBottom_toBottomOf="@+id/userAvgProgressBar"
                                    />

                                <TextView
                                    android:id="@+id/userAvgText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="충분"
                                    android:textSize="10dp"
                                    android:textColor="@color/colorAccent"
                                    android:fontFamily="@font/fsindustrietrial_bold"

                                    app:layout_constraintBottom_toBottomOf="@+id/userAvgProgressBar"
                                    app:layout_constraintLeft_toLeftOf="@+id/userAvgProgressBar"
                                    app:layout_constraintRight_toRightOf="@+id/userAvgProgressBar"
                                    />



                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="권장 14:22"
                                    android:textColor="@color/gray"
                                    android:textSize="10dp"

                                    android:fontFamily="@font/fsindustrietrial_regular"
                                    app:layout_constraintBottom_toBottomOf="parent"

                                    app:layout_constraintLeft_toLeftOf="@+id/userAvgProgressBar"
                                    app:layout_constraintRight_toRightOf="@+id/userAvgProgressBar"
                                    app:layout_constraintTop_toBottomOf="@+id/userAvgProgressBar" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <!-- VIEW END 하루 평균 착용시간 그래프 끝 -->

                            <!-- VIEW 최대 착용시간 그래프 -->
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                >

                                <TextView
                                    android:id="@+id/maxText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="최대 착용 시간"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"

                                    android:fontFamily="@font/fsindustrietrial_bold"
                                    app:layout_constraintBottom_toBottomOf="parent"

                                    app:layout_constraintLeft_toLeftOf="@+id/userMaxProgressBar"
                                    app:layout_constraintRight_toRightOf="@+id/userMaxProgressBar"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toTopOf="@+id/userMaxProgressBar"
                                    />

                                <com.github.lzyzsd.circleprogress.ArcProgress
                                    android:id="@+id/curedMaxProgressBar"
                                    android:background="@color/white"

                                    app:arc_unfinished_color="#ececec"
                                    app:arc_finished_color="#D5D5D5"

                                    android:layout_marginTop="30dp"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"

                                    app:arc_stroke_width="5dp"
                                    app:arc_progress="80"

                                    app:arc_text_color="@color/white"

                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
