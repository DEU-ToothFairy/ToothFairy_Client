<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@color/white"
    >

    <!-- TODO: Update blank fragment layout -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/profileProgressBar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/profile_circle"
                tools:progress="60"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/userNickname"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <!-- 프로필 사진 -->
            <!--
                INFO
                 - cardCornerRadius : width와 height의 절반이어야 원형이 나옴
                 - cardElevation : 그림자 효과
                 - scaleType : centerCrop으로 해야 꽉찬 원이 나옴
             -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="75dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="@+id/profileProgressBar"
                app:layout_constraintLeft_toLeftOf="@+id/profileProgressBar"
                app:layout_constraintRight_toRightOf="@+id/profileProgressBar"
                app:layout_constraintBottom_toBottomOf="@id/profileProgressBar">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@color/black"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/userNickname"
                android:text="김잼민 님 (10)"
                android:textSize="20dp"
                android:textColor="@color/black_gray"
                android:fontFamily="@font/pretendard_semibold"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:textAlignment="center"

                app:layout_constraintTop_toBottomOf="@+id/profileProgressBar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/userInfo"
                android:text="nickname"
                android:textSize="14dp"
                android:textColor="@color/skyblue"
                android:fontFamily="@font/pretendard_regular"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"

                app:layout_constraintTop_toBottomOf="@+id/userNickname"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/userInfo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="50dp"
                    >
                    <TextView
                        android:id="@+id/progress"
                        android:text="60%"
                        android:textSize="22dp"
                        android:textColor="@color/skyblue"
                        android:fontFamily="@font/pretendard_light"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:id="@+id/progressField"
                        android:text="교정 진행률"
                        android:textSize="14dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/pretendard_regular"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="50dp"
                    >

                    <TextView
                        android:id="@+id/days"
                        android:text="230"
                        android:textSize="22dp"
                        android:textColor="@color/skyblue"
                        android:fontFamily="@font/pretendard_light"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:id="@+id/daysField"
                        android:text="교정 일수"
                        android:textSize="14dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/pretendard_regular"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>