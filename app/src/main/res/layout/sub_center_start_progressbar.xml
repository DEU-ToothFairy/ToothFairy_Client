<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:text="왼쪽"
            android:textSize="13dp"
            android:textColor="@color/text_black_gray"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            />

        <FrameLayout
            android:id="@+id/leftProgressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-15dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- 커스텀 Seekbar -->
            <ProgressBar
                android:id="@+id/leftProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:rotation="180"
                android:progress="50"
                android:max="30"
                android:progressDrawable="@drawable/result_progressbar" />

            <TextView
                android:id="@+id/leftProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_gravity="right|center_vertical"
                android:text="60%"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rightProgressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-15dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- 커스텀 Seekbar -->
            <ProgressBar
                android:id="@+id/rightProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:progress="50"
                android:max="30"
                android:progressDrawable="@drawable/result_progressbar" />

            <TextView
                android:id="@+id/rightProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:text="60%"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"/>

        </FrameLayout>

        <TextView
            android:id="@+id/rightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:text="오른쪽"
            android:textSize="13dp"
            android:textColor="@color/text_black_gray"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            />
    </LinearLayout>
</layout>
